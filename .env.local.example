# .env.local - Local Environment Variables
# Copy this file to .env.local and fill in your values
# DO NOT commit .env.local to git!

# ============================================
# FIGMA INTEGRATION
# ============================================
# Get your Figma API token from: https://www.figma.com/developers/api
# FIGMA_API_TOKEN=figd_xxx...
FIGMA_API_TOKEN=

# Your Figma file ID (from file URL: https://www.figma.com/file/{FILE_ID}/...)
# NEXT_PUBLIC_FIGMA_FILE_ID=abc123def456
NEXT_PUBLIC_FIGMA_FILE_ID=

# Your Figma project ID (optional)
# NEXT_PUBLIC_FIGMA_PROJECT_ID=123456
NEXT_PUBLIC_FIGMA_PROJECT_ID=

# ============================================
# API ENDPOINTS
# ============================================
# Local development API URL
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# API timeout in milliseconds
API_TIMEOUT=10000

# Secret key for backend API (keep secret!)
API_SECRET_KEY=dev_secret_key_change_in_production

# ============================================
# DATABASE (Optional)
# ============================================
# MongoDB
# DATABASE_URL=mongodb://localhost:27017/my_app_dev

# PostgreSQL
# DATABASE_URL=postgresql://user:password@localhost:5432/my_app_dev

# ============================================
# AUTHENTICATION (Optional)
# ============================================
# Auth0 example
# NEXT_PUBLIC_AUTH_DOMAIN=yourapp.auth0.com
# NEXT_PUBLIC_AUTH_CLIENT_ID=xxxxx
# AUTH_SECRET=your_auth_secret

# ============================================
# EMAIL (Optional)
# ============================================
# Gmail SMTP
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password (not your actual password)
# SMTP_FROM=noreply@example.com

# ============================================
# ANALYTICS (Optional)
# ============================================
# Google Analytics ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=https://xxx@xxx.ingest.sentry.io/xxx

# ============================================
# FEATURE FLAGS
# ============================================
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# ============================================
# ENVIRONMENT
# ============================================
NODE_ENV=development
