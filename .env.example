# Figma Configuration
NEXT_PUBLIC_FIGMA_FILE_ID=your_figma_file_id_here
FIGMA_API_TOKEN=your_figma_api_token_here
NEXT_PUBLIC_FIGMA_PROJECT_ID=your_figma_project_id_here

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api
API_SECRET_KEY=your_secret_key_here
API_TIMEOUT=10000

# Database Configuration (if needed)
DATABASE_URL=mongodb://localhost:27017/your_db_name
# DATABASE_URL=postgresql://user:password@localhost:5432/your_db_name

# Authentication (if needed)
NEXT_PUBLIC_AUTH_DOMAIN=your_auth_domain
NEXT_PUBLIC_AUTH_CLIENT_ID=your_auth_client_id
AUTH_SECRET=your_auth_secret

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@example.com

# Analytics (if needed)
NEXT_PUBLIC_GA_ID=your_google_analytics_id
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Environment
NODE_ENV=development

# Feature Flags
NEXT_PUBLIC_ENABLE_DARK_MODE=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false
